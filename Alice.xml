		<input pattern="$Text">
		  <!-- Сохранем название компании -->
		  <var name="OrgName" value="cap($Text)" scope="org"/>
		  <output value="А как я могу к Вам обращаться?"/>
			</input>
	 	<input pattern="$Text">
		<var name="UserName" value="cap($Text)" scope="user"/>
		  <output value="Приятно познакомиться, $UserName! Чем могу Вам помочь?"/>
		
		   
<!-- Даем выбор -->
		<sample>
        	<item value="О компании"/>
		<item value="Програмные продукты"/>
		<item value="Услуги"/>
		<item value="Вакансии"/>
    		</sample>						
			</input>
		    </context>
			  </input>
		
	    </input>		
	<!-- Даем выбор -->	
		<sample>
        	<item value="Историю компании"/>
		<item value="Програмные продукты"/>
		<item value="Услуги"/>

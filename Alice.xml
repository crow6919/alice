<!-- Или переходим к внутреннему контексту чтобы выяснить имя -->
	    <context if="empty($UserName)">
	    <output value="Здравствуйте! Как можно к Вам обращаться?"/>
		<input pattern="$Text">
		  <!-- Сохранем Имя пользователя в переменную UserName -->
		  <var name="UserName" value="cap($Text)" scope="user"/>
		  <output value="Здравствуйте $UserName! Назовите вашу фирму?"/>
		</input>
		<input pattern="$Text">
		  <!-- Сохранем фирму пользователя в переменную OrgName -->
		  <var name="OrgName" value="cap($Text)" scope="org"/>
		  <output value="Приятно познакомиться, $UserName!из $OrgName Какой у Вас вопрос?"/>
 <!-- Даем выбор -->
		<sample>
        		<item value="Историю компании"/>
			<item value="Програмные продукты"/>
			<item value="Услуги"/>
			<item value="Вакансии"/>
			<item value="У меня вопрос"/>
    		</sample>						
			
		</input>
		</context>
		</input>	
	    	

	
<!-- Рассказываем -->

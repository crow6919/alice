<context>
<input pattern="*">
  <output value="Добро пожаловать в Первые ИТ"/>
<context>
  <input pattern="* (привет*|здравствуй*|хай*|здарова*) *">
    <!-- Здороваемся если знаем имя -->
    <output value="Здравствуйте $UserName! что Вы хотели бы узнать?" if="full($UserName)"/>
          
   <sample lang="ru">
      <item>Историю компании</item>
      <item>Вакансии</item>
      <item>Програмные продукты</item>
       <item>Услуги</item>
    </sample>   
    <!-- Или переходим к внутреннему контексту чтобы выяснить имя -->
    <context if="empty($UserName)">
      <output value="Здравствуйте! Как можно к Вам обращаться?"/>
        <input pattern="$Text">
          <!-- Сохранем мия пользователя в переменную UserName -->
          <var name="UserName" value="cap($Text)" scope="user"/>
          <output value="Приятно познакомиться, $UserName! Какой у Вас вопрос?"/>
          <sample lang="ru">
           <item>Историю компании</item>
            <item>Вакансии</item>
            <item>Програмные продукты</item>
             <item>Услуги</item>
          </sample>
           </input>
      </context>
    </input>
</context>
      </input>
</context>
